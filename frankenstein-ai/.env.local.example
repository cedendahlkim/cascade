# Copy this file to frankenstein-ai/.env.local (DO NOT commit secrets)
# The repo root .gitignore already ignores .env.local

# --- Trading bot ---
TRADING_EXCHANGE=kraken
TRADING_PAPER_MODE=true
TRADING_ALLOW_LIVE=false

# Kraken uses BTC symbol "XBT" (common pairs: XBTUSDT, XBTUSD, ETHUSDT)
TRADING_SYMBOLS=XBTUSDT,ETHUSDT
TRADING_INTERVAL_SECONDS=3600
TRADING_RISK_PER_TRADE=0.02
TRADING_MIN_CONFIDENCE=0.60

# Advanced strategy knobs
TRADING_KLINE_INTERVAL=1h
TRADING_MAX_POSITIONS=2
TRADING_COOLDOWN_SECONDS=0
TRADING_TAKE_PROFIT_PCT=0
TRADING_STOP_LOSS_PCT=0
TRADING_TRAILING_STOP_PCT=0
TRADING_AGGRESSION=0.5

# --- Kraken (only required for live trading) ---
# Never paste keys into chat. Put them here locally or as environment variables.
KRAKEN_API_KEY=
KRAKEN_API_SECRET=
KRAKEN_BASE_URL=https://api.kraken.com

# --- Binance (optional / fallback) ---
BINANCE_API_KEY=
BINANCE_API_SECRET=
BINANCE_BASE_URL=https://api.binance.com
