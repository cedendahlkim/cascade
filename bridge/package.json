{
  "name": "@gracestack/ai-lab-bridge",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Bridge server relaying between MCP server and mobile web client via Socket.IO",
  "main": "src/index.ts",
  "scripts": {
    "dev": "tsx --watch src/index.ts",
    "build": "tsc",
    "test": "tsx --test src/tests/s1-smoke.test.ts",
    "start": "node dist/index.js",
    "agent": "tsx src/computer-agent.ts",
    "agent:start": "tsx src/computer-agent.ts --bridge http://localhost:3031",
    "service:install": "node service-install.cjs",
    "service:uninstall": "node service-uninstall.cjs"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.73.0",
    "@google/generative-ai": "^0.24.1",
    "@supabase/supabase-js": "^2.95.3",
    "@types/compression": "^1.8.1",
    "archiver": "^7.0.1",
    "bcryptjs": "^3.0.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.4",
    "express": "^4.21.0",
    "jsonwebtoken": "^9.0.3",
    "node-windows": "^1.0.0-beta.8",
    "pdf-parse": "^1.1.1",
    "pdf2json": "^4.0.2",
    "qrcode": "^1.5.4",
    "screenshot-desktop": "^1.15.3",
    "sharp": "^0.34.5",
    "socket.io": "^4.8.0",
    "socket.io-client": "^4.8.3",
    "uuid": "^11.0.0",
    "weaviate-client": "^3.11.0"
  },
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "@types/qrcode": "^1.5.5",
    "@types/uuid": "^10.0.0",
    "pdf-to-img": "^5.0.0",
    "pdfjs-dist": "^5.4.624",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  }
}
